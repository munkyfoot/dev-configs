#!/usr/bin/env zsh
# --- Image to ASCII Art Converter ---
# Shared implementation lives in shared/img2ascii.sh

# Get the absolute directory where this script is located
typeset -g _IMG2ASCII_SCRIPT_DIR="${_IMG2ASCII_SCRIPT_DIR:-${${(%):-%x}:A:h}}"

# Shared helpers
typeset -g DC_SHARED_DIR="${DC_SHARED_DIR:-${_IMG2ASCII_SCRIPT_DIR}/../shared}"
source "${DC_SHARED_DIR}/img2ascii.sh"

# Run if called directly
if [[ "${(%):-%N}" == "$0" ]]; then
  img2ascii "$@"
fi
